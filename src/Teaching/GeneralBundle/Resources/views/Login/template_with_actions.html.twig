{% extends "TeachingGeneralBundle::template.html.twig" %}

{% block header %}
    <div class="row" style="text-align: center;">
        <div class="col-sm-3 col-md-6 col-lg-6">
            Estás en <b>{{ controller }}</b>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <a href="{{ path('teaching_user_homepage') }}">
                Volver
            </a>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <a href="{{ path('logout') }}">
                Cerrar sesión
            </a>
        </div>
    </div>
        
        
{% endblock %}

{% block content %}
    
    <div class="container">
        <div class="row">
            
            {# Show actions in controller #}
            {% block actions %}{% endblock%}
            
        </div>
        <div class="row">
            {# Show result of action #}
            <div class="col-sm-12 col-md-12 col-lg-12">
                {% block result %}{% endblock %}
            </div>
            
        </div>
    </div>
{% endblock %}

        
