{% extends "TeachingGeneralBundle::template.html.twig" %}

{% block title %}Bienvenido a Teaching!{% endblock %}

{% block header %}

    {% if app.user is not null %}
        <h3>Logueado como: {{ app.user.username }}</h3>
         
            
            <a href="
                {% if (app.user and is_granted('ROLE_USER')) %}
                    {{ path('teaching_user_homepage')}}
                {% endif %}
                {% if (app.user and is_granted('ROLE_ADMIN')) %}
                    {{ path('teaching_admin_homepage')}}
                {% endif %}
                {% if (app.user and is_granted('ROLE_TEACHER')) %}
                    {{ path('teaching_teacher_homepage')}}
                {% endif %}
            ">Volver</a><br/>
            <a href="{{ path('logout')}}">
                Cerrar sesi칩n
            </a>
        </div>
    {% else %}
        <h1>Bienvenido a Teaching!</h1>
        <form action="{{ path('login_check') }}" method="post">
            <label for="username">Usuario:</label>
            <input style="border-radius: 10px; border-color: blue; text-align: center; background-color: white; color: #b3b3b3;" 
                   type="text" 
                   id="username" name="_username" 
                   value="{% if last_username %}{{ last_username }}{% else %}Usuario{% endif %}" />

            <label for="password">Contrase침a:</label>
            <input type="password" 
                   id="password" name="_password" />

            {# Protection to CSRF attacks #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

            {# Redirect to account user #}
            <input type="hidden" name="_target_path" value="/validado" />

            <button type="submit">Entrar</button>
        </form>
    {% endif %}
    
    
    
    
    
    

{% endblock %}


{% block content %}
    
    {# Slider JS #}
    <div class="container">
        
        
        
    </div>
    
    
    
    <div class="container">
        {# Div con login de usuarios #}
        {#<div class="row show-grid">

            {% if error %}
                <div class="col-md-3">
                    {{ error.message }}
                </div>
            {% endif %}

        </div>#}
    
        {# Div con registro de usuarios #}
        <div id="registro" class="row show-grid">
            <div class="col-md-12">
                <h3>Registrate</h3>
                {{ form_start(form) }}
                    
                        <div style="float:left; clear: both;">{{ form_label(form.username, 'Usuario') }}</div>
                        <div style="float:right;">{{ form_widget(form.username) }}</div>
                    
                        <div style="float:left; clear: both;">{{ form_label(form.password, 'Contrase침a') }}</div>
                        <div style="float:right;">{{ form_widget(form.password) }}</div>
                    
                        <div style="float:left; clear: both;">{{ form_label(form.email, 'Email') }}</div>
                        <div style="float:right;">{{ form_widget(form.email) }}</div>
                    
                        <div style="float:left; clear: both;">{{ form_label(form.name, 'Nombre') }}</div>
                        <div style="float:right;">{{ form_widget(form.name) }}</div>
                    
                        <div style="float:left; clear: both;">{{ form_label(form.surname, 'Apellidos') }}</div>
                        <div style="float:right;">{{ form_widget(form.surname) }}</div>
                        
                        <div style="float:left; clear: both;">{{ form_widget(form.registrar) }}</div>
                        
                {{ form_end(form) }}
            </div>
        </div>
    
        
        {# Muestra un mensaje de creaci칩n de usuario #}
        {% for message in  app.session.flashbag.get('user_create') %}

            <div class="row show-grid" id="msg_flash">
                <div class="col-md-12">
                    {{ message }}
                </div>
            </div>

        {% endfor %}

  
   </div> 
{% endblock %}






 
